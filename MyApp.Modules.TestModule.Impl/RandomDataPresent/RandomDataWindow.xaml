<Window x:Class="MyApp.Modules.TestModule.Impl.RandomDataPresent.RandomDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" Text="{Binding GeneratedAt, StringFormat='Создано: {0:yyyy-MM-dd HH:mm:ss}'}" Margin="0,0,0,10" FontStyle="Italic"/>
    <DataGrid Grid.Row="1" ItemsSource="{Binding Items}"
              AutoGenerateColumns="True" IsReadOnly="True"/>
    <Button Grid.Row="2" Content="Закрыть" Width="100" Height="30"
            Margin="0,10,0,0" HorizontalAlignment="Right"
            Click="CloseButton_Click"/>
  </Grid>
</Window>
